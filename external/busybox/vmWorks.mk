LOCAL_PATH := $(call my-dir)
include $(CLEAR_VARS)

BUSYBOX_IMAGE  := _install/bin/busybox
BUSYBOX_OUTPUT := $(LOCAL_PATH)/$(BUSYBOX_IMAGE)

$(BUSYBOX_OUTPUT)::
	make -C $(BUSYBOX_SOURCE_PATH) $(BUSYBOX_CONFIG)
	make -C $(BUSYBOX_SOURCE_PATH) install
	cp -af $(BUSYBOX_SOURCE_PATH)/_install/* $(TARGET_ROOT_OUT)/

											 
LOCAL_MODULE := busybox
LOCAL_MODULE_TAGS := optional
LOCAL_MODULE_CLASS := PREBUILT
LOCAL_MODULE_PATH := $(TARGET_ROOT_OUT_BIN)
LOCAL_SRC_FILES := $(BUSYBOX_IMAGE)
include $(BUILD_PREBUILT)

